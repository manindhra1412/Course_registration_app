<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Enrolled Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .pending-course {
            background-color: #fce5b2;
            /* Yellow */
        }

        .accepted-course {
            background-color: #c8e6c9;
            /* Green */
        }

        .previous-course {
            background-color: #e1f5fe;
            /* Light Blue */
        }

        .course-status {
            padding: 5px;
            border-radius: 50%;
            width: 10px;
            height: 10px;
            display: inline-block;
            margin-left: 10px;
        }

        .yellow {
            background-color: yellow;
        }

        .green {
            background-color: green;
        }

        .blue {
            background-color: blue;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2>My Courses</h2>

        <!-- List Pending Courses -->
        <div class="mt-4">
            <h4>Pending Courses</h4>
            <ul class="list-group">
                <% pendingCourses.forEach(course=> { %>
                    <li class="list-group-item pending-course">
                        <strong>
                            <%= course.title %> | Teacher: <%= course.teacher.name %>
                        </strong> - <%= course.code %> | Credits: <%= course.credits %>
                                <span class="course-status yellow"></span> <!-- Yellow signal for pending -->
                    </li>
                    <% }) %>
            </ul>
        </div>

        <!-- List Accepted Courses -->
        <div class="mt-4">
            <h4>Accepted Courses</h4>
            <ul class="list-group">
                <% acceptedCourses.forEach(course=> { %>
                    <li class="list-group-item accepted-course">
                        <strong>
                            <%= course.title %> | Teacher: <%= course.teacher.name %>
                        </strong> - <%= course.code %> | Credits: <%= course.credits %>
                                <span class="course-status green"></span> <!-- Green signal for accepted -->
                    </li>
                    <% }) %>
            </ul>
        </div>

        <!-- List Previous Semester Courses -->
        <div class="mt-4">
            <h4>Previous Semester Courses</h4>
            <ul class="list-group">
                <% previous_courses.forEach(course=> { %>
                    <li class="list-group-item previous-course">
                        <strong>
                            <%= course.title %>
                        </strong> - <%= course.code %> | Credits: <%= course.credits %>
                                <span class="course-status blue"></span> <!-- Blue signal for previous semester -->
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>
</body>

</html>