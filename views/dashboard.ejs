<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h2 class="text-center">Welcome, <%= user.name %>
        </h2>
        <p class="text-center">Role: <%= user.role %>
        </p>
        <div class="d-flex justify-content-center">
            <% if (user.role==='student' ) { %>
                <a href="/enrolled-courses" class="btn btn-success mx-2">View My Courses</a>
                <a href="/course-registration" class="btn btn-success mx-2">Course Registration </a>
                <% } else if (user.role==='teacher' ) { %>
                    <a href="/teacher-dashboard" class="btn btn-info mx-2">Teacher Dashboard</a>
                    <% } else if (user.role==='admin' ) { %>
                        <a href="/view-users" class="btn btn-warning mx-2">View Users</a>
                        <a href="/create-users" class="btn btn-warning mx-2">Create Users</a>
                        <% } %>
        </div>
    </div>
</body>

</html>